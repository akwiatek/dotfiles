[include]
    path = ~/.gitconfig.private
[user]
    name = Adam Kwiatek
[clean]
    requireForce = false
[merge]
    tool = vimdiff
    conflictstyle = diff3
[color]
    ui = true
[gui]
    gcwarning = false
[push]
    default = simple
[core]
    excludesfile = ~/.gitignore_global
    whitespace = trailing-space,space-before-tab,tab-in-indent
    fileMode = true
[mergetool]
    writeToTemp = true
[rerere]
    enabled = true
[diff]
    compactionHeuristic = true
    indentHeuristic = true
    renames = copy
[alias]
    browser = "!tig"
    aliases = "!git config --list | sed --quiet '/^alias[.]/ { s/^alias[.]//; p }'"
    recent-branches = "!git for-each-ref --count=10 --sort=-committerdate refs/heads/ --format='%(refname:short)'"
    remove-old-branches = "!git branch | grep --invert-match '^[*]' | xargs --no-run-if-empty git branch --delete --force"
    test-merge = merge --no-commit --no-ff
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[gerrit]
    createChangeId = true
[color "grep"]
    linenumber = yellow bold
    filename = green bold
[credential]
    helper = store
