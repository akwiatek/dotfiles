[include]
    path = ~/.gitconfig.private
[user]
    name = Adam Kwiatek
[merge]
    tool = vimdiff
    conflictstyle = diff3
[color]
    ui = true
[gui]
    gcwarning = false
[push]
    default = simple
[core]
    excludesfile = ~/.gitignore_global
    whitespace = trailing-space,space-before-tab,tab-in-indent
    fileMode = true
[mergetool]
    writeToTemp = true
[rerere]
    enabled = true
[diff]
    compactionHeuristic = true
    indentHeuristic = true
    renames = copy
[alias]
    browser = !tig
    aliases = !git config --list | grep ^alias | sed s/alias.//
    recent-branches = !git for-each-ref --count=10 --sort=-committerdate refs/heads/ --format='%(refname:short)'
    test-merge = merge --no-commit --no-ff
    make-change-request = !git push azure HEAD:refs/for/develop%topic=$(git rev-parse --abbrev-ref HEAD) && git tag --force $(git rev-parse --abbrev-ref HEAD)-published
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[gerrit]
    createChangeId = true
